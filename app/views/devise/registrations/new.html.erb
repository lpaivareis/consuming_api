<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="container mt-5">
    <div class="card">
      <div class="card-title text-center mt-5">
        <h2>Registre-se</h2>
      </div>

      <div class="card-body">
        <div class="form-floating mb-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "floatingInput", placeholder:"name@example.com" %>
          <%= f.label :email, for: "floatingInput" %>
        </div>

        <div class="form-floating mb-3">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", id: "floatingPassword", placeholder:"Password" %>
          <%= f.label :password, for: "floatingPassword"  %>
        </div>

        <div class="form-floating mb-3">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", id: "floatingPassword", placeholder:"Password" %>
          <%= f.label :password_confirmation, for: "floatingPassword"  %>
        </div>
        
        <div class="actions text-end">
          <%= f.submit "Sign up", class: "btn btn-outline-primary" %>
        </div>
      </div>

      <div class="text-center mb-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>

  <% end %>

